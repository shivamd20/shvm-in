/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "shvm-in",
	"compatibility_date": "2025-09-02",
	"compatibility_flags": [
		"nodejs_compat"
	],
	"main": "src/server.ts",
	"observability": {
		"enabled": false
	},
	"ai": {
		"binding": "AI",
		"remote": true
	},
	/**
	 * Durable Objects
	 * Used by the MCP server for persistent message storage
	 */
	"durable_objects": {
		"bindings": [
			{
				"name": "MESSAGE_STORE",
				"class_name": "MessageStore"
			},
			{
				"name": "VOICE_SESSIONS",
				"class_name": "VoiceSessionDO"
			}
		]
	},
	/**
	 * Durable Object migrations
	 */
	"migrations": [
		{
			"tag": "v1",
			"new_classes": [
				"MessageStore"
			]
		},
		{
			"tag": "v2",
			"new_sqlite_classes": [
				"VoiceSessionDO"
			]
		}
	]
}