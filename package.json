{
	"name": "shvm-in",
	"private": true,
	"packageManager": "yarn@1.22.22",
	"type": "module",
	"engines": {
		"node": ">=22.13.0"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"predev": "node scripts/blog-generate.mjs",
		"dev": "vite dev --port 3200",
		"prebuild": "node scripts/blog-generate.mjs && npm run build:vani-client",
		"build": "WRANGLER_LOG_PATH=./.wrangler/logs vite build",
		"preview": "npm run build && vite preview",
		"lint": "eslint \"src/vani/**/*.{ts,tsx}\"",
		"new-post": "node scripts/new-post.mjs",
		"test": "vitest run",
		"test:vani": "vitest run src/vani packages/vani-client",
		"test:vani2": "vitest run src/vani2",
		"test:vani2:integration": "vitest run --config vitest.integration.config.ts",
		"build:vani-client": "npm -w @shvm/vani-client run build",
		"typecheck:vani": "npm -w @shvm/vani-client run typecheck && tsc -p tsconfig.vani.ui.json --noEmit && tsc -p tsconfig.vani.server.json --noEmit",
		"deploy": "npm run build && wrangler deploy",
		"cf-typegen": "wrangler types"
	},
	"dependencies": {
		"@cloudflare/ai-chat": "^0.0.8",
		"@cloudflare/codemode": "^0.0.7",
		"@cloudflare/tanstack-ai": "^0.1.2",
		"@cloudflare/vite-plugin": "^1.13.8",
		"@minceraftmc/opus-encoder": "^0.0.7-rc.1",
		"@modelcontextprotocol/sdk": "^1.26.0",
		"@ricky0123/vad-react": "^0.0.33",
		"@shvm/vani-client": "^0.0.2",
		"@tailwindcss/typography": "^0.5.19",
		"@tanstack/ai": "^0.5.0",
		"@tanstack/query-core": "^5.90.0",
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/router-core": "^1.160.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/react-router-ssr-query": "^1.131.7",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"@xstate/react": "^6.0.0",
		"agents": "^0.4.1",
		"ai": "^6.0.101",
		"gray-matter": "^4.0.3",
		"hast-util-to-html": "^9.0.5",
		"lucide-react": "^0.561.0",
		"opus-decoder": "^0.7.11",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-markdown": "^10.1.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-raw": "^7.0.0",
		"rehype-slug": "^6.0.0",
		"rehype-stringify": "^10.0.1",
		"remark-gfm": "^4.0.1",
		"shiki": "^3.22.0",
		"vite-tsconfig-paths": "^6.0.2",
		"xstate": "^5.28.0",
		"zod": "^4.3.6",
		"zod-to-json-schema": "^3.25.1"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/devtools-vite": "^0.3.11",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.2.0",
		"@types/node": "^22.19.11",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@types/ws": "^8.5.0",
		"@vitejs/plugin-react": "^5.0.4",
		"autoprefixer": "^10.4.24",
		"eslint": "^10.0.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-boundaries": "^5.4.0",
		"jsdom": "^27.0.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.56.0",
		"vite": "^7.1.7",
		"vitest": "^3.0.5",
		"web-vitals": "^5.1.0",
		"wrangler": "^4.65.0",
		"ws": "^8.19.0"
	}
}
