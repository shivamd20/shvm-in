{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shvm/vani-client": ["./src/index.ts"],
      "@shvm/vani-client/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__boundary_fixtures__/**"]
}
