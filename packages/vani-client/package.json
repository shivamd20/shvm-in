{
  "name": "@shvm/vani-client",
  "version": "0.0.0",
  "private": false,
  "description": "Minimal, opinionated headless voice agent client for the web (React hook + shared contracts).",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "default": "./dist/shared/index.js"
    },
    "./headless": {
      "types": "./dist/headless/index.d.ts",
      "default": "./dist/headless/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shivamd20/shvm-in"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "voice",
    "agent",
    "react",
    "websocket",
    "vad",
    "xstate"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "dependencies": {
    "@ricky0123/vad-react": "^0.0.33",
    "@xstate/react": "^6.0.0",
    "onnxruntime-web": "^1.22.0",
    "xstate": "^5.28.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.7.2"
  }
}
